<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset name="plg-birthday">
		
			<field name="birthday_daylabel" 
				type="text"
				default="please select" 
				description="PLG_ELEMENT_BIRTHDAY_DAY_LABEL_DESC" 
				label="PLG_ELEMENT_BIRTHDAY_DAY_LABEL" />
				
			<field name="birthday_monthlabel"
				type="text"
				default="please select" 
				description="PLG_ELEMENT_BIRTHDAY_MONTH_LABEL_DESC"
				label="PLG_ELEMENT_BIRTHDAY_MONTH_LABEL" />
				
			<field name="birthday_yearlabel" 
				type="text"
				default="please select" 
				description="PLG_ELEMENT_BIRTHDAY_YEAR_LABEL_DESC" 
				label="PLG_ELEMENT_BIRTHDAY_YEAR_LABEL" />
				
			<field name="birthday_separatorlabel"
				type="text"
				default="/"
				description="PLG_ELEMENT_BIRTHDAY_SEPARATOR_DESC"
				label="PLG_ELEMENT_BIRTHDAY_SEPARATOR_LABEL" />
				
			<field name="birthday_numyears"
				type="text"
				default="110"
				size="3"
				description="PLG_ELEMENT_BIRTHDAY_NUMBER_OF_YEARS_LABEL_DESC"
				label="PLG_ELEMENT_BIRTHDAY_NUMBER_OF_YEARS_LABEL" />
			
			<field name="birthday_format" 
				type="text"
				default="%Y-%m-%d"
				description="PLG_ELEMENT_BIRTHDAY_DATE_FORMAT_DESC"
				label="PLG_ELEMENT_BIRTHDAY_DATE_FORMAT_LABEL" />
		</fieldset>
	</fields>
</form>
