<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields>
		<fieldset name="plg-element-date" addfieldpath="/administrator/components/com_fabrik/models/fields">
			<field name="width" 
				type="text" size="3"
				label="PLG_ELEMENT_WIDTH_LABEL"/>
				
			<field name="hidden" 
				type="radio" 
				default="0"
				label="PLG_ELEMENT_DATE_HIDDEN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
			<field name="eval" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DATE_EVAL_LABEL" >
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="default" 
				type="textarea"
				cols="45"
				rows="6"
				label="PLG_ELEMENT_DATE_DEFAULT_LABEL" />
		
		</fieldset>
	</fields>
		
	<fields name="params">
		
		<fieldset name="plg-element-date-extra" label="PLG_ELEMENT_DATE_FORMATTING_HEADING">
			
			<field name="date_store_as_local" 
				type="radio" default="0" 
				label="PLG_ELEMENT_DATE_STORE_AS_LABEL"
				description="PLG_ELEMENT_DATE_STORE_AS_DESC">
				<option value="0">PLG_ELEMENT_DATE_UTC</option>
				<option value="1">PLG_ELEMENT_DATE_LOCAL_TIME</option>
			</field>
			
			<field name="date_table_format" 
				length="20" 
				type="text" 
				default="%Y-%m-%d" 
				label="PLG_ELEMENT_DATE_TABLE_DATE_FORMAT_LABEL" 
				description="PLG_ELEMENT_DATE_TABLE_FORMAT_DESC" />
				
			<field name="date_form_format" 
				length="20" 
				type="text" 
				default="%Y-%m-%d" 
				label="PLG_ELEMENT_DATE_FORM_DATE_FORMAT_LABEL" 
				description="PLG_ELEMENT_DATE_FORM_DATE_FORMAT_DESC" />
				
			<field name="date_defaulttotoday" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DATE_DEFAULT_TODAY_LABEL" 
				description="PLG_ELEMENT_DATE_DEFAULT_TODAY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="date_alwaystoday" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DATE_ALWAYS_TODAY_LABEL" 
				description="PLG_ELEMENT_DATE_ALWAYS_TODAY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="date_firstday" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DATE_FIRST_WEEK_DAY_LABEL" 
				description="PLG_ELEMENT_DATE_FIRST_WEEK_DAY_DESC">
					<option value="6">SATURDAY</option>
					<option value="0">SUNDAY</option>
					<option value="1">MONDAY</option>
			</field>
				
			<field name="date_allow_typing_in_field" 
				type="radio" 
				default="1" 
				label="PLG_ELEMENT_DATE_ALLOW_TYPING_IN_FIELD_LABEL" 
				description="PLG_ELEMENT_DATE_ALLOW_TYPING_IN_FIELD_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="date_csv_offset_tz" 
				type="list" default="0" 
				label="PLG_ELEMENT_DATE_CSV_OFFSET_TZ_LABEL"
				description="PLG_ELEMENT_DATE_CSV_OFFSET_TZ_DESC">
					<option value="0">PLG_ELEMENT_DATE_CSV_FORMAT_NORMAL</option>
					<option value="1">PLG_ELEMENT_DATE_CSV_FORMAT_MYSQL_GMT</option>
					<option value="2">PLG_ELEMENT_DATE_CSV_FORMAT_MYSQL_LOCAL</option>
			</field>
		</fieldset>
		
		<fieldset name="plg-element-date-time" label="PLG_ELEMENT_DATE_TIME_HEADING">
			<field name="date_showtime" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DATE_SHOW_TIME_LABEL" 
				description="PLG_ELEMENT_DATE_SHOW_TIME_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="date_time_format" 
				length="20" type="text" 
				default="%H:%M" 
				label="PLG_ELEMENT_DATE_TIME_FORMAT_LABEL" 
				description="PLG_ELEMENT_DATE_TIME_FORMAT_DESC" />
		</fieldset>
			
	</fields>
</form>