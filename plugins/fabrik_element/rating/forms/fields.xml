<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params" addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset name="plg-element-rating" label="field">
		
			<field name="rating-mode" 
				type="radio" 
				default="user-rating" 
				label="PLG_ELEMENT_RATING_MODE_LABEL" 
				description="PLG_ELEMENT_RATING_MODE_DESC">
					<option value="user-rating">User rating</option>
					<option value="creator-rating">Creator rating</option>
			</field>
			
			<field type="radio" 
				name="rating-nonefirst" 
				default="1" 
				label="PLG_ELEMENT_RATING_NO_RATING_OPTION_FIRST_LABEL" 
				description="PLG_ELEMENT_RATING_NO_RATING_OPTION_FIRST_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field type="radio" 
				name="rating-pngorgif" 
				default=".png" 
				label="PLG_ELEMENT_RATING_IMAGE_FILE_TYPE_LABEL" 
				description="PLG_ELEMENT_RATING_IMAGE_FILE_TYPE_DESC">
					<option value=".gif">GIF</option>
					<option value=".png">PNG</option>
			</field>
			
			<field type="radio" 
				name="rating-rate-in-form" 
				default="1" 
				label="PLG_ELEMENT_RATING_RATE_IN_FORM_LABEL" 
				description="PLG_ELEMENT_RATING_RATE_IN_FORM_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field type="text"
				name="rating_float"
				size="2"
				default="0"
				label="PLG_ELEMENT_RATING_FLOAT_LABEL"
				description="PLG_ELEMENT_RATING_FLOAT_DESCRIPTION"
			/>

		</fieldset>
	</fields>
</form>