<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-element-fbactiviyfeed">

			<field type="helplink"
				url="PLG_ELEMENT_FBACTIVITYFEED_HELP_SERVER" />

			<field name="opengraph_applicationid"
				type="text"
				required="true"
				class="input-medium"
				size="10"
				label="PLG_ELEMENT_FBFEED_APPLICATION_ID_LABEL"
				description="PLG_ELEMENT_FBFEED_APPLICATION_ID_DESC"
			/>

			<field name="fbactivityfeed_domain"
				type="text"
				class="input-medium"
				size="10"
				label="PLG_ELEMENT_FBFEED_DOMAIN_LABEL"
				description="PLG_ELEMENT_FBFEED_DOMAIN_DESC"
			/>

			<field name="fbactivityfeed_width"
				type="text"
				class="input-mini"
				size="3"
				default="300"
				label="PLG_ELEMENT_FBFEED_WIDTH_LABEL"
				description="PLG_ELEMENT_FBFEED_WIDTH_DESC"
			/>

			<field name="fbactivityfeed_height"
				type="text"
				class="input-mini"
				size="3"
				default="300"
				label="PLG_ELEMENT_FBFEED_HEIGHT_LABEL"
				description="PLG_ELEMENT_FBFEED_HEIGHT_DESC"
			/>

			<field name="fbactivityfeed header"
				type="radio"
				class="btn-group"
				default="1"
				label="PLG_ELEMENT_FBFEED_HEADER_LABEL"
				description="PLG_ELEMENT_FBFEED_HEADER_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>

			<field
				name="fbactivityfeed_border"
				type="text"
				size="7"
				label="PLG_ELEMENT_FBFEED_BORDER_LABEL"
				description="PLG_ELEMENT_FBFEED_BORDER_DESC"
			/>

			<field name="fbactivityfeed_font"
				type="list"
				default="arial"
				label="PLG_ELEMENT_FBFEED_FONT_LABEL"
				description="PLG_ELEMENT_FBFEED_FONT_DESC"
				>
					<option value="arial">arial</option>
					<option value="lucida grande">lucida grande</option>
					<option value="segoe ui">segoe ui</option>
					<option value="tahoma">tahoma</option>
					<option value="trebuchet ms">trebuchet ms</option>
					<option value="verdana">verdana</option>
			</field>

			<field name="fbactivityfeed_colorscheme"
				type="list"
				default="light"
				label="PLG_ELEMENT_FBFEED_COLOR_SCHEME_LABEL"
				description="PLG_ELEMENT_FBFEED_COLOR_SCHEME_DESC"
				>
					<option value="light">light</option>
					<option value="dark">dark</option>
			</field>

		</fieldset>
	</fields>
</form>
