<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params" addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset name="plg-element-fbrecommendations" label="field">
		
			<field name="opengraph_applicationid" 
				type="text" 
				label="PLG_ELEMENT_FBRECOMMENDATION_APPLICATION_ID_LABEL" 
				description="PLG_ELEMENT_FBRECOMMENDATION_APPLICATION_ID_DESC" />
			
			<field name="fbrecommendations_domain" 
				type="text" 
				label="PLG_ELEMENT_FBRECOMMENDATION_DOMAIN_LABEL" 
				description="PLG_ELEMENT_FBRECOMMENDATION_DOMAIN_DESC" />
			
			<field name="fbrecommendations_width" 
				type="text" size="3" 
				default="300" label="PLG_ELEMENT_FBRECOMMENDATION_WIDTH_LABEL" />
			
			<field name="fbrecommendations_height" 
				type="text" size="3" 
				default="300" 
				label="PLG_ELEMENT_FBRECOMMENDATION_HEIGHT_LABEL" />
			
			<field name="fbrecommendations header" 
				type="radio" 
				default="true" 
				label="PLG_ELEMENT_FBRECOMMENDATION_HEADER_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="fbrecommendations_border" 
				type="text" size="7" 
				label="PLG_ELEMENT_FBRECOMMENDATION_BORDER_LABEL" />
			
			<field name="fbrecommendations_font" 
				type="list" default="arial" 
				label="PLG_ELEMENT_FBRECOMMENDATION_FONT_LABEL">
					<option value="arial">arial</option>
					<option value="lucida grande">lucida grande</option>
					<option value="segoe ui">segoe ui</option>
					<option value="tahoma">tahoma</option>
					<option value="trebuchet ms">trebuchet ms</option>
					<option value="verdana">verdana</option>
			</field>
			
			<field name="fbrecommendations_colorscheme" 
				default="light" type="list" 
				label="PLG_ELEMENT_FBRECOMMENDATION_COLOR_SCHEME_LABEL">
					<option value="light">light</option>
					<option value="dark">dark</option>
			</field>
					
		</fieldset>

	</fields>
</form>