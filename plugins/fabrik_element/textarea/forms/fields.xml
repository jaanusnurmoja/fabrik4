<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields>
	
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-textarea">
		
			<field name="width"
				type="text"
				size="3"
				default="40"
				label="PLG_ELEMENT_TEXTAREA_WIDTH_LABEL" />
				
			<field name="height"
				type="text"
				size="3"
				default="6"
				label="PLG_ELEMENT_TEXTAREA_HEIGHT_LABEL" />
				
			<field name="eval"
				default="0"
				label="PLG_ELEMENT_TEXTAREA_EVAL_LABEL"
				type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
				
			<field name="default"
				type="textarea"
				cols="45"
				label="PLG_ELEMENT_TEXTAREA_DEFAULT_LABEL"
				rows="6"/>
		</fieldset>
		
	</fields>
	<fields name="params">
	
		<fieldset name="plg-textarea-extra">
			
			<field name="textarea_placeholder"
				type="text"
				description="PLG_ELEMENT_TEXTAREA_PLACEHOLDER_DESC"
				label="PLG_ELEMENT_TEXTAREA_PLACEHOLDER_LABEL"
				size="60"/>
				
			<field name="use_wysiwyg"
				type="radio"
				default="0"
				description="PLG_ELEMENT_TEXTAREA_USE_WYSIWYG_EDITOR_DESC"
				label="PLG_ELEMENT_TEXTAREA_USE_WYSIWYG_EDITOR_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
		</fieldset>
		
		<fieldset name="plt-textarea-limit" label="PLG_ELEMENT_TEXTAREA_LIMIT">
		
			<field name="textarea-showmax"
				type="radio"
				default="0"
				description="PLG_ELEMENT_TEXTAREA_SHOW_MAX_LIMIT_DESC"
				label="PLG_ELEMENT_TEXTAREA_SHOW_MAX_LIMIT_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="textarea-maxlength"
				type="text"
				default="255"
				description="PLG_ELEMENT_TEXTAREA_MAXLENGTH_DESC"
				label="PLG_ELEMENT_TEXTAREA_MAXLENGTH_LABEL"
				size="5" />
				
			<field name="textarea_limit_type"
				type="radio"
				default="char"
				label="PLG_ELEMENT_TEXTAREA_LIMIT_TYPE_LABEL"
				description="PLG_ELEMENT_TEXTAREA_LIMIT_TYPE_DESC">
					<option value="char">PLG_ELEMENT_TEXTAREA_CHARACTERS</option>
					<option value="word">PLG_ELEMENT_TEXTAREA_WORDS</option>
			</field>
		</fieldset>
		
		<fieldset name="plt-textarea-tagify" label="PLG_ELEMENT_TEXTAREA_TAGIFY">
			<field name="textarea-tagify"
				type="radio"
				default="0"
				description="PLG_ELEMENT_TEXTAREA_TAGIFY_DESC"
				label="PLG_ELEMENT_TEXTAREA_TAGIFY_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="textarea_tagifyurl"
				type="text"
				size="60"
				description="PLG_ELEMENT_TEXTAREA_TAGIFY_URL_DESC"
				label="PLG_ELEMENT_TEXTAREA_TAGIFY_URL_LABEL" />
		</fieldset>
		
		<fieldset name="plt-textarea-truncate" label="PLG_ELEMENT_TEXTAREA_TRUNCATE">
			<field name="textarea-truncate"
			type="text"
			size="3"
			default="0"
			description="PLG_ELEMENT_TEXTAREA_TRUNCATE_DESC"
			label="PLG_ELEMENT_TEXTAREA_TRUNCATE_LABEL" />
			
			<field name="textarea-hover"
				type="radio"
				default="1"
				description="PLG_ELEMENT_TEXTAREA_SHOW_HOVER_DESC"
				label="PLG_ELEMENT_TEXTAREA_SHOW_HOVER_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field name="textarea_hover_location"
				type="list"
				default="top"
				description="PLG_ELEMENT_TEXTAREA_HOVER_LOCATION_DESC"
				label="PLG_ELEMENT_TEXTAREA_HOVER_LOCATION_LABEL" >
					<option value="top">top</option>
					<option value="right">right</option>
					<option value="bottom">bottom</option>
					<option value="left">left</option>
			</field>
		</fieldset>
		
	</fields>
</form>
