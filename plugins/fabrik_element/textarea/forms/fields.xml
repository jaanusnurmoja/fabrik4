<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields>
	
		<fieldset label="COM_FABRIK_OPTIONS" addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-textarea">
		
			<field cols="45" label="PLG_ELEMENT_TEXTAREA_DEFAULT_LABEL" name="default" rows="6" type="textarea"/>
			
			<field default="0"
				class="btn-group"
				label="PLG_ELEMENT_TEXTAREA_EVAL_LABEL" name="eval" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
				
		</fieldset>
		
	</fields>
	<fields name="params">
	
		<fieldset name="plg-textarea-layout" label="COM_FABRIK_LAYOUT">
		
		<field name="bootstrap_class"
				type="list"
				default="input-medium"
				label="PLG_ELEMENT_BOOTSTRAP_CLASS_LABEL"
				description="PLG_ELEMENT_BOOTSTRAP_CLASS_DESC">
					<option value="input-mini">input-mini</option>
					<option value="input-small">input-small</option>
					<option value="input-medium">input-medium</option>
					<opton value="input-large">input-large</opton>
					<option value="input-xlarge">input-xlarge</option>
					<option value="input-xxlarge">input-xxlarge</option>	
			</field>
			
			<field name="width"
				type="text"
				class="input-mini"
				default="40"
				label="PLG_ELEMENT_TEXTAREA_WIDTH_LABEL"
				description="PLG_ELEMENT_TEXTAREA_WIDTH_DESC"
				size="3"/>
				
			<field name="height"
				type="text"
				class="input-mini"
				default="6"
				label="PLG_ELEMENT_TEXTAREA_HEIGHT_LABEL"
				size="3" />
			
		</fieldset>
		
		<fieldset name="plg-textarea-extra" label="COM_FABRIK_ADVANCED">
			
			<field description="PLG_ELEMENT_TEXTAREA_PLACEHOLDER_DESC" label="PLG_ELEMENT_TEXTAREA_PLACEHOLDER_LABEL" name="textarea_placeholder" size="60" type="text"/>
				
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_TEXTAREA_USE_WYSIWYG_EDITOR_DESC"
				label="PLG_ELEMENT_TEXTAREA_USE_WYSIWYG_EDITOR_LABEL" name="use_wysiwyg" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="wysiwyg_extra_buttons"
				type="radio"
				class="btn-group"
				default="1"
				label="PLG_ELEMENT_TEXTAREA_WYSIWYG_EXTRA_BUTTONS_LABEL"
				description="PLG_ELEMENT_TEXTAREA_WYSIWYG_EXTRA_BUTTONS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
				
			
		</fieldset>
		
		<fieldset label="PLG_ELEMENT_TEXTAREA_LIMIT" name="plt-textarea-limit">
		
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_TEXTAREA_SHOW_MAX_LIMIT_DESC" label="PLG_ELEMENT_TEXTAREA_SHOW_MAX_LIMIT_LABEL" name="textarea-showmax" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="255" description="PLG_ELEMENT_TEXTAREA_MAXLENGTH_DESC" label="PLG_ELEMENT_TEXTAREA_MAXLENGTH_LABEL" name="textarea-maxlength" size="5" type="text"/>
				
			<field default="char" description="PLG_ELEMENT_TEXTAREA_LIMIT_TYPE_DESC" label="PLG_ELEMENT_TEXTAREA_LIMIT_TYPE_LABEL" name="textarea_limit_type" type="list">
					<option value="char">PLG_ELEMENT_TEXTAREA_CHARACTERS</option>
					<option value="word">PLG_ELEMENT_TEXTAREA_WORDS</option>
			</field>
		</fieldset>
		
		<fieldset label="PLG_ELEMENT_TEXTAREA_TAGIFY" name="plt-textarea-tagify">
		
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_TEXTAREA_TAGIFY_DESC" label="PLG_ELEMENT_TEXTAREA_TAGIFY_LABEL" name="textarea-tagify" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field description="PLG_ELEMENT_TEXTAREA_TAGIFY_URL_DESC" label="PLG_ELEMENT_TEXTAREA_TAGIFY_URL_LABEL" name="textarea_tagifyurl" size="60" type="text"/>
		</fieldset>
		
		<fieldset label="PLG_ELEMENT_TEXTAREA_TRUNCATE" name="plt-textarea-truncate">
			<field class="input-mini" default="0" description="PLG_ELEMENT_TEXTAREA_TRUNCATE_DESC" label="PLG_ELEMENT_TEXTAREA_TRUNCATE_LABEL" name="textarea-truncate" size="3" type="text"/>
			
			<field default="1"
				class="btn-group"
				description="PLG_ELEMENT_TEXTAREA_SHOW_HOVER_DESC" label="PLG_ELEMENT_TEXTAREA_SHOW_HOVER_LABEL" name="textarea-hover" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
			
			<field default="top" description="PLG_ELEMENT_TEXTAREA_HOVER_LOCATION_DESC" label="PLG_ELEMENT_TEXTAREA_HOVER_LOCATION_LABEL" name="textarea_hover_location" type="list">
					<option value="top">top</option>
					<option value="right">right</option>
					<option value="bottom">bottom</option>
					<option value="left">left</option>
			</field>
		</fieldset>
		
	</fields>
</form>
