<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset name="plg-element-field" label="field">
		
			<field name="width" 
				type="text" size="3" default="20"
				label="PLG_ELEMENT_FIELD_WIDTH_LABEL"/>
			
			<field name="hidden" 
				type="radio"
				default="0"
				label="PLG_ELEMENT_FIELD_HIDDEN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
				
			<field name="eval" 
				type="radio"
				default="0"
				label="PLG_ELEMENT_FIELD_EVAL_LABEL">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="default"
				type="textarea"
				cols="45"
				rows="6"
				label="PLG_ELEMENT_FIELD_DEFAULT_LABEL" />
			
		</fieldset>
	</fields>
	
	<fields name="params">
		<fieldset name="plg-element-field-params">
		
		<field name="placeholder"
				type="text"
				size="60"
				label="PLG_ELEMENT_FIELD_PLACEHOLDER_LABEL"
				description="PLG_ELEMENT_FIELD_PLACEHOLDER_DESC" />
				
			<field name="password"
				type="radio"
				default="0"
				label="PLG_ELEMENT_FIELD_PASSWORD_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="maxlength" 
				type="maxlength" 
				size="3" 
				default="255" 
				label="PLG_ELEMENT_FIELD_MAX_LENGTH_LABEL" />
				
			<field name="disable" 
				type="radio" default="0" 
				label="PLG_ELEMENT_FIELD_DISABLE_ELEMENT_LABEL" 
				description="PLG_ELEMENT_FIELD_DISABLE_ELEMENT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="readonly" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_FIELD_READ_ONLY_LABEL" 
				description="PLG_ELEMENT_FIELD_READ_ONLY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="autocomplete" 
				type="radio" 
				default="1" 
				label="PLG_ELEMENT_FIELD_AUTOCOMPLETE_LABEL" 
				description="PLG_ELEMENT_FIELD_AUTOCOMPLETE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
				
		</fieldset>
		
		<fieldset name="plg-field-formatting" label="PLG_ELEMENT_FIELD_FORMATTING">

			<field name="text_format" 
				type="radio"
				default="text"
				label="PLG_ELEMENT_FIELD_FORMAT_LABEL"
				description="PLG_ELEMENT_FIELD_FORMAT_DESC">
					<option value="text">PLG_ELEMENT_FIELD_TEXT</option>
					<option value="integer">PLG_ELEMENT_FIELD_INTEGER</option>
					<option value="decimal">PLG_ELEMENT_FIELD_WIDTH_DECIMAL</option>
			</field>
			
			<field name="integer_length" 
				type="text"
				default="6"
				label="PLG_ELEMENT_FIELD_INTEGER_LENGTH_LABEL"
				description="PLG_ELEMENT_FIELD_INTEGER_LENGTH_DESC" />
				
			<field name="decimal_length"
				type="text"
				default="2"
				label="PLG_ELEMENT_FIELD_DECIMAL_LENGTH_LABEL"
				description="PLG_ELEMENT_FIELD_DECIMAL_LENGTH_DESC" />
			
			<field name="field_use_number_format" 
				type="radio" default="0" 
				label="PLG_ELEMENT_FIELD_USE_NUMBER_FORMAT_LABEL" 
				description="PLG_ELEMENT_FIELD_USE_NUMBER_FORMAT_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
		
			<field name="field_thousand_sep" 
				type="text" size="3" default="," 
				label="PLG_ELEMENT_FIELD_THOUSAND_SEP_LABEL" 
				description="PLG_ELEMENT_FIELD_THOUSAND_SEP_DESC" />
		
			<field name="field_decimal_sep" 
				type="text" size="3" default="." 
				label="PLG_ELEMENT_FIELD_DECIMAL_SEP_LABEL" 
				description="PLG_ELEMENT_FIELD_DECIMAL_SEP_DESC" />
			
			<field name="text_format_string"
				type="text"
				size="60"
				label="PLG_ELEMENT_FIELD_FORMAT_STRING_LABEL"
				description="PLG_ELEMENT_FIELD_FORMAT_STRING_DESC" />
		</fieldset>
		
		<fieldset name="plg-field-guesslink" label="PLG_ELEMENT_FIEILD_GUESS_LINK">
			<field name="guess_linktype" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_FIELD_GUESS_LINK_TYPE_LABEL" 
				description="PLG_ELEMENT_FIELD_GUESS_LINK_TYPE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="link_target_options" 
				type="list" 
				default="default" 
				description="PLG_ELEMENT_FIELD_TARGET_OPTIONS_DESC"
				label="PLG_ELEMENT_FIELD_TARGET_OPTIONS_LABEL" >
		     	<option value="default">PLG_ELEMENT_FIELD_NOT_SET</option>
					<option value="_self">PLG_ELEMENT_FIELD_TARGET_SELF</option>
					<option value="_blank">PLG_ELEMENT_FIELD_TARGET_BLANK</option>
					<option value="_parent">PLG_ELEMENT_FIELD_TARGET_PARENT</option>
					<option value="_top">PLG_ELEMENT_FIELD_TARGET_TOP</option>
					<option value="lightbox">PLG_ELEMENT_FIELD_LIGHTBOX</option>	
			</field>
		</fieldset>
		</fields>
</form>