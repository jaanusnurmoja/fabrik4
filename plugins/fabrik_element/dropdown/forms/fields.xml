<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields>
		<fieldset name="plg-element-dropdown" addfieldpath="/administrator/components/com_fabrik/models/fields">
			
			<field name="default" 
				type="textarea"
				cols="45"
				rows="6"
				label="PLG_ELEMENT_DROPDOWN_DEFAULT_LABEL"/>
				
			<field name="eval"
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DROPDOWN_EVAL_LABEL" >
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
		</fieldset>
	</fields>

	<fields name="params">
		<fieldset name="plg-dropdown-mutli">
			
			<field name="multiple" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DROPDOWN_ALLOW_MULTISELECT_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="dropdown_multisize" 
				length="3" 
				type="text" 
				default="3" 
				label="PLG_ELEMENT_DROPDOWN_MULTISIZE_LABEL" 
				description="PLG_ELEMENT_DROPDOWN_MULTISIZE_DESC" />
				
			<field name="sub_options"
				type="suboptions"
				label="COM_FABRIK_SUBOPTIONS" />
		
		</fieldset>
		<fieldset name="plg-dropdown-add">
			
			<field name="allow_frontend_addtodropdown" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DROPDOWN_EDIT_DROPDOWN_LABEL" 
				description="PLG_ELEMENT_DROPDOWN_EDIT_DROPDOWN_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="dd-allowadd-onlylabel" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DROPDOWN_ONLY_ADD_LABEL_LABEL" 
				description="PLG_ELEMENT_DROPDOWN_ONLY_ADD_LABEL_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="dd-savenewadditions" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_DROPDOWN_SAVE_NEW_ADDITIONS_LABEL" 
				description="PLG_ELEMENT_DROPDOWN_SAVE_NEW_ADDITIONS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
		</fieldset>
		
		<fieldset name="plg-dropdown-advanced">
			<field name="options_split_str" 
				type="text" 
				size="10" 
				default="" 
				label="PLG_ELEMENT_DROPDOWN_SEPARATOR_LABEL" 
				description="PLG_ELEMENT_DROPDOWN_SEPARATOR_DESC" />
		</fieldset>
		
	</fields>
</form>