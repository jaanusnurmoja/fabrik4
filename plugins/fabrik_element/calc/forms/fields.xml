<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset addfieldpath="/administrator/components/com_fabrik/models/fields" name="plg-element-calc" label="COM_FABRIK_OPTIONS">
			
			<field default="0"
				class="btn-group"
				label="PLG_ELEMENT_CALC_HIDDEN_LABEL" name="hidden" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
				
			<field class="input-mini" label="PLG_ELEMENT_CALC_WIDTH_LABEL" name="width" size="3" type="text"/>
				
		</fieldset>
	</fields>
	
	<fields name="params">	
		<fieldset name="plg-calc-extra" label="COM_FABRIK_MORE">
			
			<field cols="60" description="PLG_ELEMENT_CALC_CALCULATION_DESC" label="PLG_ELEMENT_CALC_CALCULATION_LABEL" name="calc_calculation" rows="10" type="textarea"/>
				
			<field description="PLG_ELEMENT_CALC_FORMAT_STRING_DESC" label="PLG_ELEMENT_CALC_FORMAT_STRING_LABEL" name="calc_format_string" type="text"/>
				
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_CALC_ON_SAVE_ONLY_DESC" label="PLG_ELEMENT_CALC_ON_SAVE_ONLY_LABEL" name="calc_on_save_only" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="0"
				class="btn-group"
				description="PLG_ELEMENT_CALC_AJAX_DESC" label="PLG_ELEMENT_CALC_AJAX_LABEL" name="calc_ajax" type="radio">
					<option value="0">No</option>
					<option value="1">Yes</option>
			</field>	
			
			<field cols="60" description="PLG_ELEMENT_CALC_AJAX_OBSERVE_DESC" label="PLG_ELEMENT_CALC_AJAX_OBSERVE_LABEL" name="calc_ajax_observe" rows="6" type="textarea"/>
				
		</fieldset>

	</fields>
</form>
