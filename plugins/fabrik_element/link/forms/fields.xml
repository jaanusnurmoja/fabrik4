<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields>
		<fieldset name="plg-element-link" addfieldpath="/administrator/components/com_fabrik/models/fields">
			<field name="width" 
				type="text" size="3" default="20"
				label="PLG_ELEMENT_LINK_WIDTH_LABEL"/>
				
			<field name="default" 
				type="textarea"
				cols="45"
				rows="6"
				label="PLG_ELEMENT_LINK_DEFAULT_LABEL_LABEL" />
		
		</fieldset>
	</fields>
	
	<fields name="params">
		<fieldset name="plg-element-link-extra" addfieldpath="/administrator/components/com_fabrik/models/fields">
			<field name="link_default_url" 
				type="text" 
				default="http://" 
				label="PLG_ELEMENT_LINK_DEFAULT_URL_LABEL" />
				
			<field name="link_target" 
				type="list" 
				default="0" 
				label="PLG_ELEMENT_LINK_TARGET_LABEL" 
				description="PLG_ELEMENT_LINK_TARGET_DESC">
					<option value="_self">PLG_ELEMENT_LINK_SELF</option>
					<option value="_blank">PLG_ELEMENT_LINK_BLANK</option>
					<option value="_parent">PLG_ELEMENT_LINK_PARENT</option>
					<option value="_top">PLG_ELEMENT_LINK_TOP</option>
					<option value="mediabox">PLG_ELEMENT_LINK_MEDIABOX</option>
			</field>
			
			<field name="link_smart_link" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_LINK_SMART_LINK_LABEL" 
				description="PLG_ELEMENT_LINK_SMART_LINK_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="maxlength" 
				type="maxlength" 
				size="3" 
				default="255" 
				label="PLG_ELEMENT_LINK_MAX_LENGTH"/>
		</fieldset>
		
		<fieldset name="plg-element-link-bitly" addfieldpath="/administrator/components/com_fabrik/models/fields">
			<field name="use_bitly" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_LINK_USE_BITLY_LABEL" 
				description="PLG_ELEMENT_LINK_USE_BITLY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="bitly_login" 
				type="text" 
				size="30"
				label="PLG_ELEMENT_LINK_BITLY_LOGIN_LABEL" 
				description="PLG_ELEMENT_LINK_BITLY_LOGIN_DESC"/>
				
			<field name="bitly_apikey" 
				type="text" 
				size="40" 
				label="PLG_ELEMENT_LINK_BITLY_API_KEY_LABEL" 
				description="PLG_ELEMENT_LINK_BITLY_API_KEY_DESC"/>
		</fieldset>
	</fields>
</form>