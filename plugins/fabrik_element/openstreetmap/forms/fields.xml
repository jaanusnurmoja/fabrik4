<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params" addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset name="plg-element-openstreetmap" label="">
		
			<field name="fb_osm_defaultlayer" 
				type="list" 
				default="openlayers" 
				label="PLG_ELEMENT_OPENSTREETMAP_DEFAULT_LAYER_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_DEFAULT_LAYER_DESC">
				<option value="openlayers">PLG_ELEMENT_OPENSTREETMAP_OPEN_LAYERS</option>
				<option value="yahoo">PLG_ELEMENT_OPENSTREETMAP_YAHOO</option>
				<option value="google">PLG_ELEMENT_OPENSTREETMAP_GOOGLE</option>
				<option value="virtualearth">PLG_ELEMENT_OPENSTREETMAP_VIRTUAL_EARTH</option>
			</field>
			
			<field name="fb_osm_gmlayers" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_OPENSTREETMAP_SHOW_GOOGLE_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_SHOW_GOOGLE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="fb_osm_gm_key" 
				type="text" 
				size="30"
				label="PLG_ELEMENT_OPENSTREETMAP_GOOGLE_MAP_KEY_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_GOOGLE_MAP_KEY_DESC"/>
			
			<field name="fb_osm_yahoolayers" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_OPENSTREETMAP_SHOW_YAHOO_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_SHOW_YAHOO_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="fb_yahoo_key" 
				type="text" 
				size="30"
				label="PLG_ELEMENT_OPENSTREETMAP_YAHOO_MAP_KEY_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_YAHOO_MAP_KEY_DESC"/>
			
			<field name="fb_osm_virtualearthlayers" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_OPENSTREETMAP_SHOW_VIRTUAL_EARTH_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_SHOW_VIRTUAL_EARTH_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
		
			<field name="fb_osm_lat" 
				type="text" 
				size="10" 
				default="53.2224" 
				label="PLG_ELEMENT_OPENSTREETMAP_LAT_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_LAT_DESC"/>
				
			<field name="fb_osm_long" 
				type="text" 
				size="10" 
				default="-4.2007" 
				label="PLG_ELEMENT_OPENSTREETMAP_LONG_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_LONG_DESC"/>
				
			<field name="fb_osm_zoomlevel" 
				type="text" 
				size="3" 
				default="4" 
				label="PLG_ELEMENT_OPENSTREETMAP_ZOOM_LEVEL_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_ZOOM_LEVEL_DESC"/>
				
			<field name="fb_osm_mapwidth" 
				type="text" 
				size="3" 
				default="200" 
				label="PLG_ELEMENT_OPENSTREETMAP_MAP_WIDTH_LABEL"/>
				
			<field name="fb_osm_mapheight" 
				type="text" 
				size="3" 
				default="150" 
				label="PLG_ELEMENT_OPENSTREETMAP_MAP_HEIGHT_LABEL"/>
			
		</fieldset>
		
		<fieldset name="plg-element-openstreetmap-table" label="PLG_ELEMENT_OPENSTREETMAP_LIST_SETTINGS">
			<field name="fb_osm_table_mapwidth" 
				type="text" 
				size="3" 
				default="200" 
				label="PLG_ELEMENT_OPENSTREETMAP_MAP_WIDTH_LABEL"/>
				
			<field name="fb_osm_table_mapheight" 
				type="text" 
				size="3" 
				default="150" 
				label="PLG_ELEMENT_OPENSTREETMAP_MAP_HEIGHT_LABEL"/>
				
			<field name="fb_osm_table_zoomlevel" 
				type="text" 
				size="3" 
				default="4" 
				label="PLG_ELEMENT_OPENSTREETMAP_ZOOM_LEVEL_LABEL" 
				description="PLG_ELEMENT_OPENSTREETMAP_ZOOM_LEVEL_DESC"/>
				
		</fieldset>

		</fields>
</form>