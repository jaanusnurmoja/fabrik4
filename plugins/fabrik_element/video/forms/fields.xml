<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params">
	
		<fieldset name="plg-element-video" addfieldpath="/administrator/components/com_fabrik/models/fields">
			
			<field name="ul_directory" type="text" size="30" label="UPLOAD_DIR" description="UPLOAD_DIR_LONG"/>	

			<field name="fbVideoController" type="radio" default="1" label="CONTROLLER" description="">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="fbVideoAutoPlay" type="radio" default="0" label="AUTOPLAY" description="">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="fbVideoLoop" type="radio" default="0" label="LOOP" description="">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			
			<field name="fbVideoEnableJS" type="radio" default="1" label="ENABLEJS" description="">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="fbVideoPlayEveryFrame" type="radio" default="0" label="PLAYEVERYFRAME" description="">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="fbVideoShowVideoInTable" type="radio" default="0" label="SHOWVIDEOINTABLE" description="">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="fbVideoWidth" type="text" default="300" label="WIDTH"  />
			<field name="fbVideoHeight" type="text" default="300" label="HEIGHT"  />
			
			<field name="fbVideoBgColor" type="text" label="BGCOLOR"  />
			<field name="fbVideoEndTime" type="text" label="ENDTIME"  />
			<field name="fbVideoStartTime" type="text" label="STARTTIME"  />
			<field name="fbVideoVolume" type="text" default="100" label="VOLUME" description="between 0(mute) and 100 (full volume)" />
			
			
					
		</fieldset>
	</fields>
</form>