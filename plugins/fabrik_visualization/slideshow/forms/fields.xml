<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params">
		<fieldset name="thisoptions">
			
			<field name="slideshow_viz_type"
				type="list"
				default="1"
				label="PLG_VISUALIZATION_SLIDESHOW_TYPE_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_TYPE_DESC">
					<option value="1">PLG_VISUALIZATION_SLIDESHOW_NORMAL</option>
					<option value="2">PLG_VISUALIZATION_SLIDESHOW_KEN_BURNS</option>
					<option value="3">PLG_VISUALIZATION_SLIDESHOW_PUSH</option>
					<option value="4">PLG_VISUALIZATION_SLIDESHOW_FOLD</option>
			</field>
			
			<field name="slideshow_viz_thumbnails"
				type="radio"
				default="0"
				label="PLG_VISUALIZATION_SLIDESHOW_THUMBNAILS_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_THUMBNAILS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="slideshow_viz_connection"
				type="connections"
				label="PLG_VISUALIZATION_SLIDESHOW_CONNECTION_LABEL" />
				
			<field name="slideshow_viz_table"
				observe="params_slideshow_viz_connection"
				type="fabriktables"
				label="PLG_VISUALIZATION_SLIDESHOW_TABLE_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_TABLE_DESC" />
				
			<field name="slideshow_viz_file"
				type="element"
				connection="slideshow_viz_connection"
				table="params_slideshow_viz_table"
				label="PLG_VISUALIZATION_SLIDESHOW_FILE_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_FILE_DESC" />
				
			<field name="slideshow_viz_file_format"
				type="text"
				size="30"
				label="PLG_VISUALIZATION_SLIDESHOW_FILE_FORMAT_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_FILE_FORMAT_DESC" />
				
			<field name="slideshow_viz_caption"
				type="element"
				connection="slideshow_viz_connection"
				table="params_slideshow_viz_table"
				label="PLG_VISUALIZATION_SLIDESHOW_CAPTION_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_CAPTION_DESC" />
				
			<field name="slideshow_viz_width"
				type="text"
				size="4"
				default="400"
				label="PLG_VISUALIZATION_SLIDESHOW_WIDTH_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_WIDTH_DESC" />
				
			<field name="slideshow_viz_height"
				type="text"
				size="4"
				default="300"
				label="PLG_VISUALIZATION_SLIDESHOW_HEIGHT_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_HEIGHT_DESC" />
				
			<field name="slideshow_viz_delay"
				type="text"
				size="6"
				default="5000"
				label="PLG_VISUALIZATION_SLIDESHOW_DELAY_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_DELAY_DESC" />
				
			<field name="slideshow_viz_duration"
				type="text"
				size="6"
				default="2000"
				label="PLG_VISUALIZATION_SLIDESHOW_DURATION_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_DURATION_DESC" />
				
			<field name="slideshow_viz_zoom"
				type="text"
				size="6"
				default="50"
				label="PLG_VISUALIZATION_SLIDESHOW_ZOOM_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_ZOOM_DESC" />
				
			<field name="slideshow_viz_pan"
				type="text"
				size="6"
				default="20"
				label="PLG_VISUALIZATION_SLIDESHOW_PAN_LABEL"
				description="PLG_VISUALIZATION_SLIDESHOW_PAN_DESC" />
				
		</fieldset>
	</fields>
</form>	