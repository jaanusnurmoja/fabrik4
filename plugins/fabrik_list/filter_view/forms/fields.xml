<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params" addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset name="plg-list-filter_view">
		
		<field name="filter_view_access" 
				type="accesslevel" 
				default="1"
				repeat="true"
				label="PLG_FABRIK_LIST_FILTER_VIEW_ACCESS_LABEL" />
				
			<field name="filter_view_settings" 
				type="fabrikmodalrepeat" 
				repeat="true"
				label="PLG_LIST_FILTER_VIEW_SETTINGS_LABEL"
				description="PLG_LIST_FILTER_VIEW_SETTINGS_DESC">
				
					<fields name="params">
						<fieldset name="filter_view_settings_modal" repeat="true">
							<field name="label" 
								type="text" 
								size="30"
								label="PLG_LIST_FILTER_VIEW_LABEL_LABEL"/>
							
							<field name="url" 
								type="textarea" 
								cols="50"
								rows="3"
								label="PLG_LIST_FILTER_VIEW_FILTER_LABEL"/>
							
							<field name="count"
								type="radio"
								repeat="true"
								default="0"
								label="count">
									<option value="0">JNO</option>
									<option value="1">JYES</option>	
							</field>
							
						</fieldset>
				</fields>
				
			</field>
			
		</fieldset>
	</fields>
</form>
