<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params">
		<fieldset name="plg-validationrule-php">
			<field type="text" 
				name="php-message" 
				size="30" 
				repeat="true"
				label="PLG_VALIDATIONRULE_PHP_ERROR_LABEL"
				description="PLG_VALIDATIONRULE_PHP_ERROR_DESC" />
				
			<field type="textarea" 
				cols="30" rows="5" 
				repeat="true"
				name="php-validation_condition" 
				label="PLG_VALIDATIONRULE_PHP_CONDITION_LABEL" 
				description="PLG_VALIDATIONRULE_PHP_CONDITION_DESC"/>
				
			<field type="textarea" 
				cols="30" rows="5" 
				name="php-code"
				repeat="true"
				label="PLG_VALIDATIONRULE_PHP_CODE_LABEL" 
				description="PLG_VALIDATIONRULE_PHP_CODE_DESC"/>
				
			<field name="php-match" 
				type="radio" 
				default="1" 
				repeat="true"
				label="PLG_VALIDATIONRULE_PHP_MATCH_OR_REPLACE_LABEL" 
				description="PLG_VALIDATIONRULE_PHP_MATCH_OR_REPLACE_DESC">
					<option value="0">PLG_VALIDATIONRULE_PHP_REPLACE</option>
					<option value="1">PLG_VALIDATIONRULE_PHP_MATCH</option>
			</field>
			
		</fieldset>
	</fields>
</form>