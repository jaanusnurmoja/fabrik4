<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-validationrule-isnumeric">
		
			<field name="isnumeric-message"
				type="text"
				description="PLG_VALIDATIONRULE_ISNUMERIC_ERROR_DESC"
				label="PLG_VALIDATIONRULE_ISNUMERIC_ERROR_LABEL"
				repeat="true"
				size="30"/>
				
			<field name="isnumeric-validation_condition"
				type="fabrikeditor"
				mode="php"
				width="400px"
				description="PLG_VALIDATIONRULE_ISNUMERIC_CONDITION_DESC"
				label="PLG_VALIDATIONRULE_ISNUMERIC_CONDITION_LABEL"
				repeat="true" />
				
			<field name="isnumeric-allow_empty"
				type="radio"
				default="0"
				class="btn-group"
				description="PLG_VALIDATIONRULE_ISNUMERIC_ALLOW_EMPTY_DESC"
				label="PLG_VALIDATIONRULE_ISNUMERIC_ALLOW_EMPTY_LABEL"
				repeat="true" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
		</fieldset>
	</fields>
</form>
