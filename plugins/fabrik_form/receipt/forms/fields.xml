<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields name="params">
		<fieldset name="plg-form-receipt">
		
			<field name="ask-receipt"
				default="0"
				description="PLG_FORM_RECEIPT_USERCHOOSESRECEIPT_DESC"
				label="PLG_FORM_RECEIPT_USERCHOOSESRECEIPT_LABEL"
				repeat="true"
				type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="receipt_to"
				description="PLG_FORM_RECEIPT_TO_DESC"
				label="PLG_FORM_RECEIPT_TO_LABEL"
				repeat="true" size="30"
				type="text"/>
				  
			<field name="receipt_subject"
				description="PLG_FORM_RECEIPT_TITLE_DESC"
				label="PLG_FORM_RECEIPT_TITLE_LABEL"
				repeat="true"
				size="30"
				type="text"/>
				
			<field name="receipt_message"
				cols="60"
				description="PLG_FORM_RECEIPT_MESSAGE_DESC"
				label="PLG_FORM_RECEIPT_MESSAGE_LABEL"
				repeat="true"
				rows="8"
				type="textarea"/>
			
			<field name="receipt_button_label"
				repeat="true"
				description="PLG_FORM_RECEIPT_BUTTON_LABEL_DESC"
				label="PLG_FORM_RECEIPT_BUTTON_LABEL_LABEL" />
		</fieldset>
	</fields>
</form>
