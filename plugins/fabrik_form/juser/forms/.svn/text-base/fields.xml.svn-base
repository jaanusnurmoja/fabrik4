<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params">
	<fieldset name="plg-form-juser">
		<field name="juser_field_name" 
			type="listfields" 
			onlytablefields="0" 
			default="user" 
			repeat="true"
			label="PLG_FABRIK_FORM_JUSER_NAME_FIELD_LABEL" 
			description="PLG_FABRIK_FORM_JUSER_NAME_FIELD_DESC"/>
			
		<field name="juser_field_username" 
			type="listfields" 
			onlytablefields="0" 
			default="username"
			repeat="true" 
			label="PLG_FABRIK_FORM_JUSER_USERNAME_FIELD_LABEL" 
			description="PLG_FABRIK_FORM_JUSER_USERNAME_FIELD_DESC"/>
			
		<field name="juser_field_password" 
			type="listfields" 
			onlytablefields="0" 
			default="password"
			repeat="true" 
			label="PLG_FABRIK_FORM_JUSER_PASSWORD_FIELD_LABEL" 
			description="PLG_FABRIK_FORM_JUSER_PASSWORD_FIELD_DESC"/>
			
		<field name="juser_field_email" 
			type="listfields" 
			onlytablefields="0" 
			default="email"
			repeat="true" 
			label="PLG_FABRIK_FORM_JUSER_EMAIL_FIELD_LABEL" 
			description="PLG_FABRIK_FORM_JUSER_EMAIL_FIELD_DESC"/>
			
		<field name="juser_field_usertype" 
			type="listfields" 
			onlytablefields="0" 
			default="gid"
			repeat="true" 
