				type="text" 
				size="30" 
				repeat="true"
				label="PLG_FABRIK_FORM_JUSER_SUCCESS_LINK_LABEL" 
				description="PLG_FABRIK_FORM_JUSER_SUCCESS_LINK_DESC"/>
				
