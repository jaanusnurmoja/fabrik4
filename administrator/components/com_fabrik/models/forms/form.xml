<?xml version="1.0" encoding="utf-8" standalone="no"?>
<form>
	<name>Form Edit Form</name>
	<fieldset name="details">
			
		<field name="id" 
			type="text" 
			default="0" 
			readonly="true" 
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 
			description ="JGLOBAL_FIELD_ID_DESC" />
			
		<field name="label" 
			type="text" 
			size="40" 
			required="true"
			label="COM_FABRIK_FIELD_TITLE_LABEL"
			description="COM_FABRIK_FIELD_TITLE_DESC" />
			
		<field name="intro" 
			type="editor"
			buttons="false"
			filter="FabrikAdminHelper::filterText"
			rows="3" 
			cols="6" 
			label="COM_FABRIK_FIELD_INTRODUCTION_LABEL"
			description="COM_FABRIK_FIELD_INTRODUCTION_DESC" />
			
		<field name="error" 
			type="text"
			size="40" 
			label="COM_FABRIK_FIELD_ERROR_MSG_LABEL"
			description="COM_FABRIK_FIELD_ERROR_MSG_DESC" />
			
	</fieldset>
	
	<fieldset name="publishing">
		
		<field class="btn-group" default="0" label="JSTATUS" name="published" type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
		</field>
		
		<field description="COM_FABRIK_FIELD_AUTHOR_DESC" label="COM_FABRIK_FIELD_AUTHOR_LABEL" name="created_by" type="user"/>
			
		<field label="COM_FABRIK_FIELD_CREATE_DATE_LABEL" name="created" type="calendar"/>
			
		<field label="COM_FABRIK_FIELD_START_PUBLISHING_LABEL" name="publish_up" type="calendar"/>
			
		<field label="COM_FABRIK_FIELD_FINISH_PUBLSHING_LABEL" name="publish_down" type="calendar"/>
			
	</fieldset>
	
	<fieldset name="templates">
	
		<field description="COM_FABRIK_FIELD_FORM_TEMPLATE_DESC" directory="/components/com_fabrik/views/form/tmpl/" label="COM_FABRIK_FIELD_FORM_TEMPLATE_LABEL" name="form_template" type="folderlist"/>
				
		<field description="COM_FABRIK_FIELD_DETAILED_VIEW_TEMPLATE_DESC" directory="/components/com_fabrik/views/form/tmpl/" label="COM_FABRIK_FIELD_DETAILED_VIEW_TEMPLATE_LABEL" name="view_only_template" type="folderlist"/>
			
	</fieldset>
	
	<fields name="params">
		
		<fieldset name="details2">
		
			<field name="outro" 
				type="editor"
				buttons="false"
				filter="FabrikAdminHelper::filterText"
				rows="3" 
				cols="6" 
				label="COM_FABRIK_FIELD_OUTRO_LABEL"
				description="COM_FABRIK_FIELD_OUTRO_DESC" />
				
		</fieldset>
		<fieldset name="buttons">
		
			<field class="btn-group" default="0" label="COM_FABRIK_FIELD_RESET_BUTTON_LABEL" name="reset_button" type="radio">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
			<field default="Reset" description="COM_FABRIK_FIELD_RESET_BUTTON_LABEL_DESC" label="COM_FABRIK_FIELD_RESET_BUTTON_LABEL_LABEL" name="reset_button_label" type="text"/>
				
			<field class="btn-group" default="0" description="COM_FABRIK_FIELD_COPY_BUTTON_DESC" label="COM_FABRIK_FIELD_COPY_BUTTON_LABEL" name="copy_button" type="radio">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
			<field default="Save as a copy" description="COM_FABRIK_FIELD_COPY_BUTTON_LABEL_LABEL" label="COM_FABRIK_FIELD_COPY_BUTTON_LABEL_LABEL" name="copy_button_label" type="text"/>
				
			<field class="btn-group" default="0" label="COM_FABRIK_FIELD_GO_BACK_BUTTON_LABEL" name="goback_button" type="radio">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
			<field default="Go back" label="COM_FABRIK_FIELD_GO_BACK_BUTTON_LABEL_LABEL" name="goback_button_label" type="text"/>
			
			<field class="btn-group" default="0" description="COM_FABRIK_FIELD_APPLY_BUTTON_DESC" label="COM_FABRIK_FIELD_APPLY_BUTTON_LABEL" name="apply_button" type="radio">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
			<field default="Apply" description="COM_FABRIK_FIELD_APPLY_BUTTON_LABEL_DESC" label="COM_FABRIK_FIELD_APPLY_BUTTON_LABEL_LABEL" name="apply_button_label" type="text"/>
				
			<field class="btn-group" default="0" description="COM_FABRIK_FIELD_DELETE_BUTTON_DESC" label="COM_FABRIK_FIELD_DELETE_BUTTON_LABEL" name="delete_button" type="radio">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
			<field default="Delete" description="COM_FABRIK_FIELD_DELETE_BUTTON_LABEL_DESC" label="COM_FABRIK_FIELD_DELETE_BUTTON_LABEL_LABEL" name="delete_button_label" type="text"/>

			<field class="btn-group" default="1" description="COM_FABRIK_FIELD_SUBMIT_BUTTON_DESC" label="COM_FABRIK_FIELD_SUBMIT_BUTTON_LABEL" name="submit_button" type="radio">
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>				
			
			<field default="Save" description="COM_FABRIK_FIELD_SUBMIT_BUTTON_LABEL_DESC" label="COM_FABRIK_FIELD_SUBMIT_BUTTON_LABEL_LABEL" name="submit_button_label" type="text"/>
			
			<field class="btn-group" default="0" description="COM_FABRIK_FIELD_SUBMIT_ON_ENTER_DESC" label="COM_FABRIK_FIELD_SUBMIT_ON_ENTER_LABEL" name="submit_on_enter" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
		</fieldset>
		
		<fieldset name="templates2">
		
			<field default="admin" description="COM_FABRIK_FIELD_PDF_TEMPLATE_DESC" directory="/components/com_fabrik/views/form/tmpl/" hide_default="1" hide_none="0" label="COM_FABRIK_FIELD_PDF_TEMPLATE_LABEL" name="pdf_template" type="folderlist"/>
				
		</fieldset>
		
		<fieldset name="layout">
		
			<field class="btn-group" default="1" description="COM_FABRIK_FIELD_SHOW_TITLE_DESC" label="COM_FABRIK_FIELD_SHOW_TITLE_LABEL" name="show-title" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field class="btn-group" default="1" description="COM_FABRIK_FIELD_SHOW_TITLE_IN_DETAIL_VIEW_DESC" label="COM_FABRIK_FIELD_SHOW_TITLE_IN_DETAIL_VIEW_LABEL" name="show-title-in-detail-view" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field description="COM_FABRIK_FIELD_PRINT_ICON_DESC" label="COM_FABRIK_FIELD_PRINT_ICON_LABEL" name="print" type="list">
					<option value="">JGLOBAL_USE_GLOBAL</option>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
			<field description="COM_FABRIK_FIELD_EMAIL_ICON_DESC" label="COM_FABRIK_FIELD_EMAIL_ICON_LABEL" name="email" type="list">
					<option value="">JGLOBAL_USE_GLOBAL</option>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
			<field description="COM_FABRIK_FIELD_PDF_ICON_DESC" label="COM_FABRIK_FIELD_PDF_ICON_LABEL" name="pdf" type="list">
					<option value="">JGLOBAL_USE_GLOBAL</option>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
			</field>
			
		</fieldset>
		
		<fieldset name="admintemplates">
		
		<field default="" description="COM_FABRIK_FIELD_ADMIN_FORM_TEMPLATE_DESC" directory="/components/com_fabrik/views/form/tmpl/" hide_default="0" hide_none="1" label="COM_FABRIK_FIELD_ADMIN_FORM_TEMPLATE_LABEL" name="admin_form_template" type="folderlist"/>
				
			<field default="" description="COM_FABRIK_FIELD_ADMIN_DETAILS_TEMPLATE_DESC" directory="/components/com_fabrik/views/form/tmpl/" hide_default="0" hide_none="1" label="COM_FABRIK_FIELD_ADMIN_DETAILS_TEMPLATE_LABEL" name="admin_details_template" type="folderlist"/>
				
		</fieldset>
		
		<fieldset name="notes">
		
			<field cols="40" descripton="COM_FABRIK_FIELD_NOTE_DESC" label="COM_FABRIK_FIELD_NOTE_LABEL" name="note" rows="3" type="textarea"/>
				
		</fieldset>
		
		<fieldset name="options">
		
			<field class="btn-group" default="0" description="COM_FABRIK_FIELD_SHOW_RELATED_TABLE_LINKS_DESC" label="COM_FABRIK_FIELD_SHOW_RELATED_TABLE_LINKS_LABEL" name="show-referring-table-releated-data" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="tip" description="COM_FABRIK_FIELD_FORM_TIP_LOCATION_DESC" label="COM_FABRIK_FIELD_FORM_TIP_LOCATION_LABEL" name="tiplocation" type="list">
					<option value="tip">COM_FABRIK_TIP</option>
					<option value="above">COM_FABRIK_TIP_ABOVE</option>
					<option value="below">COM_FABRIK_TIP_BELOW</option>
					<option value="side">COM_FABRIK_TIP_SIDE</option>
			</field>
			
			<field default="2" description="COM_FABRIK_FIELD_PROCESS_JPLUGINS_DESC" label="COM_FABRIK_FIELD_PROCESS_JPLUGINS_LABEL" name="process-jplugins" type="list">
					<option value="0">JNO</option>
					<option value="1">COM_FABRIK_DETAILS_AND_FORM_VIEW</option>
					<option value="2">COM_FABRIK_DETAILS_VIEW_ONLY</option>
			</field>
			
		</fieldset>
		
		<fieldset name="cck">
			
			<field description="COM_FABRIK_FIELD_CCK_CATEGORY_DESC" extension="com_content" label="COM_FABRIK_FIELD_CCK_CATEGORY_LABEL" name="cck_category" type="category"/>
				
		</fieldset>
		
		<fieldset name="processing">
			
			<field class="btn-group" default="0" description="COM_FABRIK_FIELD_AJAX_VALIDATIONS_DESC" label="COM_FABRIK_FIELD_AJAX_VALIDATIONS_LABEL" name="ajax_validations" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field description="COM_FABRIK_FIELD_SUBMIT_SUCCESS_MSG_DESC" label="COM_FABRIK_FIELD_SUBMIT_SUCCESS_MSG_LABEL" name="submit-success-msg" size="45" type="text"/>
				
			<field name="suppress_msgs"
				type="list" 
				default="0" 
				label="COM_FABRIK_FIELD_SUPPRESS_MSGS_LABEL" 
				description="COM_FABRIK_FIELD_SUPPRESS_MSGS_DESC">
					<option value="0">JNO</option>
					<option value="1">COM_FABRIK_SUPPRESS_SUCCESS_MSGS</option>
					<option value="2">COM_FABRIK_SUPPRESS_ACL_MSGS</option>
					<option value="3">COM_FABRIK_SUPPRESS_ALL_MSGS</option>
			</field>				
				
			<field class="btn-group" default="1" description="COM_FABRIK_FIELD_SPOOF_CHECK_DESC" label="COM_FABRIK_FIELD_SPOOF_CHECK_LABEL" name="spoof_check" type="radio">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field default="0" description="COM_FABRIK_FIELD_SPLIT_PAGE_SAVE_DESC" label="COM_FABRIK_FIELD_SPLIT_PAGE_SAVE_LABEL" name="multipage_save" type="list">
					<option value="0">JNO</option>
					<option value="1">COM_FABRIK_ONLY_LOGGED_IN_USERS</option>
					<option value="2">COM_FABRIK_EVERYONE</option>
			</field>
		</fieldset>
	
	</fields>
	
	<fieldset name="groups">
		
		<field class="btn-group" label="COM_FABRIK_CREATE_GROUP_WITH_SAME_NAME" name="_createGroup" type="autocreategroup">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
		</field>
		
		<field description="COM_FABRIK_CURRENT_GROUPS_DESC" label="COM_FABRIK_FIELD_CURRENT_GROUPS_LABEL" multiple="true" name="current_groups" type="swaplist"/>
			
		<field class="btn-group" default="0" description="COM_FABRIK_FIELD_RANDOMISE_GROUPS_DESC" label="COM_FABRIK_FIELD_RANDOMISE_GROUPS_LABEL" name="randomise_groups" type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
		</field>
		
	</fieldset>
	
	<fieldset name="formprocessing">
	
		<field class="btn-group" default="1" description="COM_FABRIK_FIELD_RECORD_IN_DATABASE_DESC" label="COM_FABRIK_FIELD_RECORD_IN_DATABASE_LABEL" name="record_in_database" type="radio">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
		</field>
		
		<field description="COM_FABRIK_FIELD_DATABASE_NAME_DESC" label="COM_FABRIK_FIELD_DATABASE_NAME_LABEL" name="db_table_name" size="40" type="text"/>
			
	</fieldset>
	
</form>
